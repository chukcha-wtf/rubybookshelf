<h2>
  {{user.fullname}}

  {{#if editing}}
    <a href="#" class="pull-right btn btn-success" {{action 'save'}}>Save</a>
    <a href="#" class="pull-right btn btn-warning" {{action 'cancel'}}>Cancel</a>
  {{else}}
    {{#canEditRecord user}}
      <a href="#" class="pull-right btn btn-info" {{action 'edit'}}>Edit</a>
    {{/canEditRecord}}
  {{/if}}

</h2>

<div>
  <dl class="dl-horizontal">
    <dt>Fullname</dt>
    <dd>
      {{#if editing}}
        {{input type="text" value=user.fullname class="form-control"}}
      {{else}}
        {{user.fullname}}
      {{/if}}
    </dd>
    <dt>Bio</dt>
    <dd>
      {{#if editing}}
        {{textarea value=user.bio class="form-control"}}
      {{else}}
        {{user.bio}}
      {{/if}}
    </dd>
    <dt>Role</dt>
    <dd>
      {{#if editing}}
        {{view Ember.Select content=roles value=user.role class="form-control" }}
      {{else}}
        {{user.role}}
      {{/if}}
    </dd>
  </dl>
</div>
<br/>
<h4>
  Books
</h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    {{#each book in user.books}}
      <tr>
        <td>{{book.id}}</td>
        <td>{{#link-to 'book' book}}{{book.title}}{{/link-to}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<br/>
<h4>
  Authors
</h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Fullname</th>
    </tr>
  </thead>
  <tbody>
    {{#each author in user.authors}}
      <tr>
        <td>{{author.id}}</td>
        <td>{{#link-to 'author' author}}{{author.fullname}}{{/link-to}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>